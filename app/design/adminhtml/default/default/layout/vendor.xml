<?xml version="1.0"?>
<layout>
     <adminhtml_vendor_attribute_edit>
        <reference name="left">
            <block type="vendor/adminhtml_vendor_attribute_edit_tabs" name="vendor_edit_tabs"></block>
        </reference>
        <reference name="content">
            <block type="vendor/adminhtml_vendor_attribute_edit" name="vendor_edit_content"></block>
        </reference>
        <reference name="js">
            <block type="adminhtml/template" name="attribute_edit_js" template="vendor/attribute/js.phtml"></block>
        </reference>
    </adminhtml_vendor_attribute_edit>

    <adminhtml_vendorproduct_attribute_edit>
        <reference name="left">
            <block type="vendor/adminhtml_vendorproduct_attribute_edit_tabs" name="vendor_edit_tabs"></block>
        </reference>
        <reference name="content">
            <block type="vendor/adminhtml_vendorproduct_attribute_edit" name="vendor_edit_content"></block>
        </reference>
        <reference name="js">
            <block type="adminhtml/template" name="attribute_edit_js" template="vendor/attribute/js.phtml"></block>
        </reference>
    </adminhtml_vendorproduct_attribute_edit>


    <adminhtml_vendor_edit>
        <update handle="editor"/>
        <reference name="content">
            <block type="vendor/adminhtml_vendor_edit" name="vendor_edit"></block>
        </reference>
        <reference name="left">
            <block type="vendor/adminhtml_vendor_edit_tabs" name="vendor_tabs"></block>
        </reference>
        <reference name="js">
            <block type="adminhtml/catalog_product_edit_js" template="catalog/product/js.phtml" name="catalog_product_js"></block>
            <block type="core/template" template="catalog/wysiwyg/js.phtml"/>
        </reference>
    </adminhtml_vendor_edit>

    <adminhtml_vendorproduct_edit>
        <update handle="editor"/>
        <reference name="content">
            <block type="vendor/adminhtml_vendorproduct_edit" name="vendorproduct_edit"></block>
        </reference>
        <reference name="left">
            <block type="vendor/adminhtml_vendorproduct_edit_tabs" name="vendorproduct_tabs"></block>
        </reference>
        <reference name="js">
            <block type="adminhtml/catalog_product_edit_js" template="catalog/product/js.phtml" name="catalog_product_js"></block>
            <block type="core/template" template="catalog/wysiwyg/js.phtml"/>
        </reference>
    </adminhtml_vendorproduct_edit>

</layout>