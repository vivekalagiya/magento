<config>
	
	<modules>
		<Ccc_Vendor>
			<version>1.1.3</version>
		</Ccc_Vendor>
	</modules>

	<global>

		<models>
	        <vendor>
	            <class>Ccc_Vendor_Model</class>
	            <resourceModel>vendor_resource</resourceModel>
	        </vendor>


	        <vendor_resource>
	            <class>Ccc_Vendor_Model_Resource</class>
	            <entities>
	                <vendor>
	                    <table>vendor</table>
	                </vendor>
	                <vendor_datetime>
	                	<table>vendor_datetime</table>
		            </vendor_datetime>
		            <vendor_decimal>
		                <table>vendor_decimal</table>
		            </vendor_decimal>
		            <vendor_int>
		                <table>vendor_int</table>
		            </vendor_int>
		            <vendor_text>
		                <table>vendor_text</table>
		            </vendor_text>
		            <vendor_varchar>
		                <table>vendor_varchar</table>
		            </vendor_varchar>
		            <vendor_char>
		                <table>vendor_char</table>
		            </vendor_char>
		            <eav_attribute>
                        <table>vendor_eav_attribute</table>
                    </eav_attribute>

	                <vendor_product>
	                    <table>vendor_product</table>
	                </vendor_product>
	                <vendor_product_datetime>
	                	<table>vendor_product_datetime</table>
		            </vendor_product_datetime>
		            <vendor_product_decimal>
		                <table>vendor_product_decimal</table>
		            </vendor_product_decimal>
		            <vendor_product_int>
		                <table>vendor_product_int</table>
		            </vendor_product_int>
		            <vendor_product_text>
		                <table>vendor_product_text</table>
		            </vendor_product_text>
		            <vendor_product_varchar>
		                <table>vendor_product_varchar</table>
		            </vendor_product_varchar>
		            <vendor_product_char>
		                <table>vendor_product_char</table>
		            </vendor_product_char>
		            <eav_productattribute>
                        <table>vendor_product_eav_attribute</table>
                    </eav_productattribute>
					<product_attribute_group>
						<table>vendor_product_attribute_group</table>
					</product_attribute_group>
					<form_attribute>
						<table>vendor_form_attribute</table>
					</form_attribute>
					<eav_attribute_website>
						<table>vendor_eav_attribute_website</table>
					</eav_attribute_website>
					<product_request>
						<table>vendor_product_request</table>
					</product_request>
		        </entities>
		    </vendor_resource>
		</models>

			<resources>
            <vendor_setup>
                <setup>
                    <module>Ccc_Vendor</module>
                    <class>Ccc_Vendor_Model_Resource_Setup</class>
                </setup>
            </vendor_setup>
        </resources>

		<helpers>
			<vendor>
				<class>Ccc_Vendor_Helper</class>
			</vendor>
		</helpers>

		<blocks>
			<vendor>
				<class>Ccc_Vendor_Block</class>
			</vendor>
		</blocks>

	</global>

	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<ccc_vendor>Ccc_Vendor_Adminhtml</ccc_vendor>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>

	<adminhtml>
	    <layout>
	      <updates>
	        <vendor>
	          <file>vendor.xml</file>
	        </vendor>
	      </updates>
	    </layout>
  	</adminhtml>

	
	<frontend>
		<events>
			<controller_action_layout_load_before>
				<observers>
					<vendor_is_logged_in_observer>
						<class>vendor/observer</class>
						<method>beforeLoadLayout</method>
					</vendor_is_logged_in_observer>
				</observers>
			</controller_action_layout_load_before>
			<sales_model_service_quote_submit_after>
				<observers>
					<restore_vendor_group_id>
						<class>vendor/observer</class>
						<method>quoteSubmitAfter</method>
					</restore_vendor_group_id>
				</observers>
			</sales_model_service_quote_submit_after>
		</events>
		<routers>
			<vendor>
				<use>standard</use>
				<args>
					<module>Ccc_Vendor</module>
					<frontName>vendor</frontName>
				</args>
			</vendor>
		</routers>
		<layout>
			<updates>
				<ccc_vendor>
					<file>vendor.xml</file>
				</ccc_vendor>
			</updates>
		</layout>
	</frontend>	

</config>
	